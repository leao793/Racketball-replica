    "props": {
      "text": "**Contáctanos**"
    }
  },
  "rich-text#footer-content-contact": {
    "props": {
      "text": "Email: contacto@racketball.co\nWhatsapp: (+57) 313-547-85-78\nTel: (604) 444-52-44 Ext 137\nChat: Lunes a viernes 8am - 5pm Sábado 8am - 11am",
