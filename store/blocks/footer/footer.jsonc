      "rich-text#footer-title-stores",
      "image#ubi"
    ]
  },
  "rich-text#footer-title-stores": {
    "props": {
      "text": "**Conoce nuestras tiendas:**"
    }
  },
  "image#ubi": {
    "props": {
      "src": "https://racketball.vteximg.com.br/arquivos/ubicacionTiendas-1.png",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "maxWidth": 40
    }
  },

